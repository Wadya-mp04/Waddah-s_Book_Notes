<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cutive+Mono&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="assets/favicon.png">
    <script type="text/javascript" src="script/script.js" defer></script>
    <title>BookNotes</title>
</head>
<body>
    <div class="header">
        <button id="theme-switch" class="btn" onclick="themeClick()" > 
            <svg id="lightmode"  class="shake" xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" ><path d="M480-280q-83 0-141.5-58.5T280-480q0-83 58.5-141.5T480-680q83 0 141.5 58.5T680-480q0 83-58.5 141.5T480-280ZM200-440H40v-80h160v80Zm720 0H760v-80h160v80ZM440-760v-160h80v160h-80Zm0 720v-160h80v160h-80ZM256-650l-101-97 57-59 96 100-52 56Zm492 496-97-101 53-55 101 97-57 59Zm-98-550 97-101 59 57-100 96-56-52ZM154-212l101-97 55 53-97 101-59-57Z"/></svg>
            <svg id="darkmode" class="shake" xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" ><path d="M480-120q-150 0-255-105T120-480q0-150 105-255t255-105q14 0 27.5 1t26.5 3q-41 29-65.5 75.5T444-660q0 90 63 153t153 63q55 0 101-24.5t75-65.5q2 13 3 26.5t1 27.5q0 150-105 255T480-120Z"/></svg>
        </button>
        <h1 class="header-title">Waddah's Book Notes</h1>
        <button id="add-button" class="btn">
            <svg id="plus" class="shake" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
            </svg>
        </button>
    </div>
    <div id="book-cards">
        <% if(bookList.length == 0){ %>
            <p id="message">Im Illiterate</p>
            <p id="message1">jokes just no books are uploaded</p>
        <% } else {  %>
            <% bookList.forEach(book => { %>
                <div class="card" id="card<%= book.ISBN %>" onclick="clickSound()">
                    <!-- Top row -->
                    <div class="card-top">
                        <div class="title-author">
                        <h2 id="title<%= book.ISBN %>" class="title"><%= book.title %></h2>
                        <p id="author<%= book.ISBN %>"><%= book.Author %></p>
                        <p id="ISBN<%= book.ISBN %>">ISBN : <%= book.ISBN %></p>
                        </div>

                        <div class="rating" id="rating<%= book.ISBN %>">
                        <% for (let i = 0; i < book.rating; i++){ %>
                            <svg class="ratingStar" xmlns="http://www.w3.org/2000/svg" height="24" width="24" viewBox="0 -960 960 960">
                            <path d="m233-120 65-281L80-590l288-25 112-265 112 265 288 25-218 189 65 281-247-149-247 149Z"/>
                            </svg>
                        <% } %>
                        </div>

                        <div id="ratingEdit<%= book.ISBN %>" class="ratingEdit" hidden>
                        <input type="text" value="<%= book.rating %>" name="updatedRating">
                        </div>
                    </div>

                    <!-- Middle -->
                    <p id="note<%= book.ISBN %>" class="note"><%= book.note %></p>
                    <!-- keep ONE textarea only -->
                    <textarea id="noteEdit<%= book.ISBN %>" class="noteEdit" name="updatedNote" hidden><%= book.note %></textarea>

                    <!-- Bottom row -->
                    <div class="card-bottom">
                        <!-- left: delete -->
                        <!-- <form action="/delete" onsubmit="event.stopPropagation()">
                        <input type="hidden" name="deleteISBN" value="<%= book.ISBN %>"> -->
                        <button class="btn-d">
                            <svg class="shake svg-d" xmlns="http://www.w3.org/2000/svg" height="24" width="24" viewBox="0 -960 960 960">
                            <path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Z"/>
                            </svg>
                        </button>
                        <!-- </form> -->
                        <p class="bad_message"></p>
                        <!-- right: edit / done / cancel live together -->
                        <div class="actions-right">
                        <!-- Edit button (shown by default) -->
                        <button class="btn-e shake edit-toggle" id="edit<%=book.ISBN%>"
                                onclick="startEdit('<%=book.ISBN%>', event)">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" viewBox="0 -960 960 960">
                            <path d="M200-200h57l391-391-57-57-391 391v57Z"/>
                            </svg>
                        </button>

                        <!-- Done + Cancel (hidden by default) -->
                        <form action="/edit" method="post" class="edit-actions" hidden>
                            <input type="hidden" name="updatedItemISBN" value="<%= book.ISBN %>">
                            <button id="cancel<%= book.ISBN %>" class="cancel btn-e" type="button"
                                    onclick="cancelEdit('<%=book.ISBN%>', event)">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" viewBox="0 -960 960 960" >
                                <path d="m336-280 144-144 144 144 56-56-144-144 144-144-56-56-144 144-144-144-56 56 144 144-144 144 56 56Z"/>
                            </svg>
                            </button>
                            <button id="done<%=book.ISBN%>" class="edit btn-e" type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" viewBox="0 -960 960 960" >
                                <path d="M382-240 154-468l57-57 171 171 367-367 57 57-424 424Z"/>
                            </svg>
                            </button>
                        </form>
                        </div>
                    </div>
                    </div>

            <% }); %>
        <% } %>
    </div>
    <div class="modal_container">
        <div class="modal">
            <h1 class="modal_header">Input Credentials</h1>
            <form action="/check" method="post" class="inCheckForm">
                <input type="text" name="user" id="inCheckUser" placeholder="username">
                <br/>
                <br/>
                <input type="password" name="password" id="inCheckPass" placeholder="password">
                <br/>
                <div class="modal_actions">
                <input type="submit" class="modal_btn" value="Submit">
                <input type="hidden" name="action" value="add" id="modalAction">
                <input type="hidden" name="ISBN" value="" id="modalInISBN">
                <button class="modal_btn" id="modal-close" type="button">Cancel</button>
                </div>
            </form>
            <p class="modal_message"></p>
            <p class="bad_message"></p>
            <p class="good_message"></p>
        </div>
    </div>                
      <%- include('partials/footer.ejs'); -%>
    <script>


        // Expose for onclick="clickSound()"
        window.clickSound = () => playClick();

        
          function startEdit(id, event) {
            event.stopPropagation();

            // elements
            const card       = document.getElementById('card' + id);
            const note       = document.getElementById('note' + id);
            const noteEdit   = document.getElementById('noteEdit' + id);
            const rating     = document.getElementById('rating' + id);
            const ratingEdit = document.getElementById('ratingEdit' + id);

            const editBtn    = document.getElementById('edit' + id);
            const actions    = editBtn.closest('.actions-right').querySelector('.edit-actions');

            // show inputs, hide displays
            note.hidden       = true;
            rating.hidden     = true;
            noteEdit.hidden   = false;
            ratingEdit.hidden = false;

            // swap buttons
            editBtn.classList.add('hidden');
            actions.hidden = false;
        }

        function cancelEdit(id, event) {
            event.stopPropagation();

            const note       = document.getElementById('note' + id);
            const noteEdit   = document.getElementById('noteEdit' + id);
            const rating     = document.getElementById('rating' + id);
            const ratingEdit = document.getElementById('ratingEdit' + id);

            const editBtn    = document.getElementById('edit' + id);
            const actions    = editBtn.closest('.actions-right').querySelector('.edit-actions');

            // hide inputs, show displays
            note.hidden       = false;
            rating.hidden     = false;
            noteEdit.hidden   = true;
            ratingEdit.hidden = true;

            // swap buttons back
            editBtn.classList.remove('hidden');
            actions.hidden = true;
        }

        document.querySelectorAll(".card").forEach(card => {
            const note = card.querySelector(".note");

            card.addEventListener("click", (e) => {
                // Prevent expansion toggle when clicking buttons/inputs inside the card
                if (e.target.closest("button") || e.target.closest("input")) return;

                if (card.classList.contains("expanded")) {
                // Collapse it back
                card.classList.remove("expanded");
                } else {
                // Only expand if truncated
                const isTruncated = note.scrollHeight > note.clientHeight;
                if (isTruncated) {
                    card.classList.add("expanded");
                }
                }
            });
        });

        const deleteCard = document.querySelector('#book-cards');
        const message = document.querySelector('.modal_message');
        const modal = document.querySelector('.modal_container');
        const closeModal = document.querySelector('#modal-close');
        const openModal = document.querySelector('#add-button');
        const action = document.querySelector('#modalAction');
        const modalISBN = document.querySelector('#modalInISBN');
        const form = document.querySelector('.inCheckForm');
        const badModalMessage = modal.querySelector('.bad_message');
        const goodMessage = document.querySelector('.good_message');

        deleteCard.addEventListener('click', (e) => {
            // Find the closest delete button (works for svg/path clicks)
            const deleteBtn = e.target.closest('.btn-d');

            // If the click wasn't inside a delete button, ignore
            if (!deleteBtn || !deleteCard.contains(deleteBtn)) return;

            // Prevent card expansion or other side effects
            e.stopPropagation();
            e.preventDefault();

            // Log what was actually clicked
            console.log('Delete button clicked:', deleteBtn);

            // Optional: get the card / ISBN
            const card = deleteBtn.closest('.card');
            if (card) {
                console.log('Card ID:', card.id);
                modal.classList.add('show');
                message.innerHTML = "please fill in credentials to delete the rating for book ISBN: " + card.id.substring(4);
                action.value = "delete";
                modalISBN.value = card.id.substring(4);
            }
        });
        closeModal.addEventListener('click', () =>{
            playClick()
            modal.classList.remove('show')
        });
        openModal.addEventListener('click', () =>{
            playClick()
            action.value = "add";
            modalISBN.value = "";
            message.textContent = "Please enter credentials to add a book rating.";
            badModalMessage.textContent = "";
            goodMessage.textContent = "";
            modal.classList.add('show')
        })

        form.addEventListener('submit', async (e) => {
            e.preventDefault();

            message.textContent = '';
            badModalMessage.textContent = '';
            goodMessage.textContent = '';

            const user = document.getElementById('inCheckUser').value.trim();
            const pass = document.getElementById('inCheckPass').value.trim();

            if(!user || !pass) {
                badModalMessage.textContent = 'Please fill in both username and password.';
                return;
            }

            try {
                const res = await fetch('/check', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        user,
                        password: pass,
                        action: action.value,
                        ISBN: modalISBN.value
                    })
                });

                const data = await res.json();

                if(!data.success) {
                    badModalMessage.textContent = data.message || 'Invalid credentials.';
                    return;
                }

                goodMessage.textContent = 'Credentials verified.';

                if(action.value === 'add') {
                    // Redirect admin page
                    window.location.href = data.redirect;
                    return;
                }

                if(action.value === 'delete') {
                    const deleteRes = await fetch('/delete', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ ISBN: modalISBN.value })
                    });

                    const deleteData = await deleteRes.json();

                    if(deleteData.success) {
                        goodMessage.textContent = deleteData.message;
                        document.getElementById('card' + modalISBN.value)?.remove();
                    } else {
                        badModalMessage.textContent = deleteData.message || 'Delete failed.';
                    }
                }

            } catch(err) {
                console.error(err);
                badModalMessage.textContent = 'Server error. Please try again.';
            }
        });

        const bookCards = document.querySelector('#book-cards');
        
        bookCards.addEventListener('submit', async (e) => {
        const form = e.target.closest('form.edit-actions');
        if (!form) return;                // ignore other forms
        console.log("hello");
        e.preventDefault();
        e.stopPropagation();

        // Find ISBN from hidden input in this form
        const isbn = form.querySelector('input[name="updatedItemISBN"]').value;

        // Read current edited values from the card
        const card = form.closest('.card');
        const newNote = card.querySelector(`#noteEdit${isbn}`).value.trim();
        const ratingInput = card.querySelector(`#ratingEdit${isbn} input`);
        const newRating = ratingInput ? ratingInput.value.trim() : '';
        const badEditMessage = card.querySelector('.bad_message');
        badEditMessage.textContent = '';

        // Basic validation (optional)
        if (!newNote || !newRating) {
            badEditMessage.textContent = 'Note & Ratingcannot be empty';
            return;
        }
        let numRating = Number(newRating);
        if (numRating < 1 || numRating > 10 || Number.isNaN(numRating)) {
            badEditMessage.textContent = 'Rating must be in between 1 & 10 (inclusive)';
            return;
        }
        try {
            const res = await fetch('/edit', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                ISBN: isbn,
                updatedNote: newNote,
                updatedRating: newRating
            })
            });

            const data = await res.json();
            if (!data.success) {
            badEditMessage.textContent = data.message || 'Edit failed';
            return;
            }

            // Update frontend text immediately
            card.querySelector(`#note${isbn}`).textContent = newNote;

            // If you want: update stars display here (rebuild rating)
            // (keep it simple at firstâ€”just update note)

            // Exit edit mode using your existing cancelEdit logic
            cancelEdit(isbn, e);
            const stars = card.querySelector(`#rating${isbn}`);
            stars.innerHTML = '';
            for (let i = 0 ; i<numRating; i++){
                stars.innerHTML+= '<svg class="ratingStar" xmlns="http://www.w3.org/2000/svg" height="24" width="24" viewBox="0 -960 960 960"><path d="m233-120 65-281L80-590l288-25 112-265 112 265 288 25-218 189 65 281-247-149-247 149Z"/></svg>'
            }
        } catch (err) {
            console.error(err);
        }
        });
    </script>

</body>
</html>