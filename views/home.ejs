    <script>
        // 1) One AudioContext for the page
        const AudioCtx = window.AudioContext || window.webkitAudioContext;
        const audioCtx = new AudioCtx();

        // 2) Cache decoded audio buffers
        const buffers = {};
        async function loadBuffer(url) {
            if (buffers[url]) return buffers[url];
            const res = await fetch(url);
            const arr = await res.arrayBuffer();
            const buffer = await audioCtx.decodeAudioData(arr);
            buffers[url] = buffer;
            return buffer;
        }

        // 3) Play with a per-play gain (volume 0.0â€“1.0)
        async function playSound(url, volume = 1.0) {
            if (audioCtx.state === 'suspended') {
            // must be called in a user gesture; your clicks are fine
            await audioCtx.resume();
            }
            const buffer = await loadBuffer(url);
            const source = audioCtx.createBufferSource();
            source.buffer = buffer;

            const gain = audioCtx.createGain();
            gain.gain.value = volume;

            source.connect(gain);
            gain.connect(audioCtx.destination);
            source.start(0);
        }

        // 4) Your helpers
        function themeClick() {
            const isLight = document.body.classList.contains('lightmode');
            const url = isLight ? '/assets/toDarkMode.mp3' : '/assets/toLightMode.mp3';
            playSound(url, 0.5); // <- set your desired volume here
        }

        function playClick() {
            playSound('/assets/click.mp3', 0.75);
        }

        // Add button example (you already have this pattern)
        const addBtn = document.getElementById('add-button');
        if (addBtn) {
            addBtn.addEventListener('click', (e) => {
            e.preventDefault();
            const url = addBtn.getAttribute('href');
            playClick().finally(() => setTimeout(() => (window.location.href = url), 120));
            });
        }

        // Expose for onclick="clickSound()"
        window.clickSound = () => playClick();

        
          function startEdit(id, event) {
            event.stopPropagation();

            // elements
            const card       = document.getElementById('card' + id);
            const note       = document.getElementById('note' + id);
            const noteEdit   = document.getElementById('noteEdit' + id);
            const rating     = document.getElementById('rating' + id);
            const ratingEdit = document.getElementById('ratingEdit' + id);

            const editBtn    = document.getElementById('edit' + id);
            const actions    = editBtn.closest('.actions-right').querySelector('.edit-actions');

            // show inputs, hide displays
            note.hidden       = true;
            rating.hidden     = true;
            noteEdit.hidden   = false;
            ratingEdit.hidden = false;

            // swap buttons
            editBtn.hidden = true;
            // for(const child of editBtn)
            //     {
            //         child.setAttribue('hidden',true);
            //     }
            actions.hidden = false;
        }

        function cancelEdit(id, event) {
            event.stopPropagation();

            const note       = document.getElementById('note' + id);
            const noteEdit   = document.getElementById('noteEdit' + id);
            const rating     = document.getElementById('rating' + id);
            const ratingEdit = document.getElementById('ratingEdit' + id);

            const editBtn    = document.getElementById('edit' + id);
            const actions    = editBtn.closest('.actions-right').querySelector('.edit-actions');

            // hide inputs, show displays
            note.hidden       = false;
            rating.hidden     = false;
            noteEdit.hidden   = true;
            ratingEdit.hidden = true;

            // swap buttons back
            actions.hidden = true;
            editBtn.hidden = false;
            // for(child of editBtn)                this thing is so annoying broooo
            //     {
            //         child.hidden = false;
            //     }
        }

        document.querySelectorAll(".card").forEach(card => {
            const note = card.querySelector(".note");

            card.addEventListener("click", (e) => {
                // Prevent expansion toggle when clicking buttons/inputs inside the card
                if (e.target.closest("button") || e.target.closest("input")) return;

                if (card.classList.contains("expanded")) {
                // Collapse it back
                card.classList.remove("expanded");
                } else {
                // Only expand if truncated
                const isTruncated = note.scrollHeight > note.clientHeight;
                if (isTruncated) {
                    card.classList.add("expanded");
                }
                }
            });
        });



